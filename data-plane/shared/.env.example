# Shared Stack Environment Configuration
# Copy this to .env and customize

# Shared Postgres Cluster
SHARED_POSTGRES_PASSWORD=your-secure-password-here
SHARED_POSTGRES_PORT=5434

# Shared Gateway
SHARED_GATEWAY_PORT=8080
SHARED_GATEWAY_URL=http://localhost:8080

# Shared JWT Secret (for all shared projects)
SHARED_JWT_SECRET=your-super-secret-jwt-key-for-shared-32-chars-min

# Shared Keys (generated - you should replace these)
SHARED_ANON_KEY=placeholder-anon-key
SHARED_SERVICE_ROLE_KEY=placeholder-service-role-key

# Control Plane URL (for routing proxy lookups)
CONTROL_PLANE_URL=http://host.docker.internal:8000

# Secret Key Base for Realtime
SECRET_KEY_BASE=ChangeThisToAVeryLongRandomStringAtLeast64Characters

# Default Site URL
SITE_URL=http://localhost:3000
